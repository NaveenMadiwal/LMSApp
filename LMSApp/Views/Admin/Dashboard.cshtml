@model LMSApp.Models.ViewModels.AdminDashboardViewModel

<div>Total Courses: @Model.TotalCourses</div>



@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Home Page";
}

<h2>@ViewData["Title"]</h2>

<div class="dashboard-container">
    <div class="card">Total Courses: <strong>@Model.TotalCourses</strong></div>
    <div class="card">Total Enrollments: <strong>@Model.TotalEnrollments</strong></div>
    <div class="card">Total Students: <strong>@Model.TotalStudents</strong></div>
    <div class="card">Total Categories: <strong>@Model.TotalCategories</strong></div>
</div>

<style>
    .dashboard-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-top: 1rem;
    }

    .card {
        background: #f4f4f4;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        font-size: 1.2rem;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
    }
</style>
