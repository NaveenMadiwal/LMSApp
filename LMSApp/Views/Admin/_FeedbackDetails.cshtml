@model LMSApp.Models.ViewModels.FeedbackViewModel
<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h5>Student</h5>
            <div class="fw-bold">@Model.StudentName</div>
        </div>
        <div class="col-md-6">
            <h5>Course</h5>
            <div class="fw-bold">@Model.CourseTitle</div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <h5>Rating</h5>
            <div class="star-rating">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Model.Rating)
                    {
                        <i class="fas fa-star text-warning"></i>
                    }
                    else
                    {
                        <i class="far fa-star text-muted"></i>
                    }
                }
                <span class="ms-2 fw-bold">@Model.Rating/5</span>
            </div>
        </div>
        <div class="col-md-6">
            <h5>Date</h5>
            <div>@Model.SubmittedAt.ToString("MMM dd, yyyy HH:mm")</div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-12">
            <h5>Comments</h5>
            <div class="border rounded p-3 bg-light">
                @if (!string.IsNullOrEmpty(Model.Comments))
                {
                    @Model.Comments
                }
                else
                {
                    <span class="text-muted">No comments provided.</span>
                }
            </div>
        </div>
    </div>
</div> 