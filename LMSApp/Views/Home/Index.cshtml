@{
    ViewData["Title"] = "Welcome to LMSApp";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
body {
    background: #f4f8fb;
}
.hero-section, .trusted-logos, .features-section, .testimonials-section, .cta-section {
    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
    padding-left: 0 !important;
    padding-right: 0 !important;
}
.hero-section {
    background: linear-gradient(120deg, #4f8cff 0%, #6dd5ed 50%, #a084ee 100%);
    color: #fff;
    padding: 90px 0 60px 0;
    text-align: left;
    position: relative;
    overflow: hidden;
    border-bottom: 6px solid #e0e7ff;
}
.hero-section::before {
    content: '';
    position: absolute;
    top: -100px; left: -100px; right: -100px; bottom: -100px;
    background: radial-gradient(circle at 20% 40%, rgba(255,255,255,0.08) 0, transparent 70%),
                radial-gradient(circle at 80% 60%, rgba(255,255,255,0.10) 0, transparent 80%);
    z-index: 0;
    pointer-events: none;
}
.hero-content {
    position: relative;
    z-index: 1;
    backdrop-filter: blur(2px);
}
.hero-section .display-3 {
    font-weight: 800;
    letter-spacing: 1px;
    text-shadow: 0 2px 8px rgba(0,0,0,0.08);
}
.hero-section .lead {
    font-size: 1.4rem;
    margin-bottom: 2rem;
    text-shadow: 0 1px 4px rgba(0,0,0,0.07);
}
.hero-section .btn-lg {
    font-size: 1.2rem;
    padding: 0.75rem 2.5rem;
    margin: 0 0.5rem;
}
.hero-section .hero-img-static {
    box-shadow: 0 8px 32px 0 rgba(31,38,135,0.13);
    border-radius: 1.5rem;
    max-width: 420px;
}
.hero-section .hero-illustration {
    max-width: 420px;
    border-radius: 1.5rem;
    box-shadow: 0 8px 32px 0 rgba(31,38,135,0.10);
}
.trusted-logos {
    background: #f8f9fa;
    border-bottom: 1px solid #e0e7ff;
    padding: 24px 0 18px 0;
    text-align: center;
}
.trusted-logos img {
    height: 38px;
    margin: 0 24px 12px 24px;
    opacity: 0.7;
    filter: grayscale(1);
    transition: opacity 0.2s, filter 0.2s;
}
.trusted-logos img:hover {
    opacity: 1;
    filter: none;
}
.glass-card {
    background: rgba(255,255,255,0.95);
    border-radius: 1.5rem;
    box-shadow: 0 8px 32px 0 rgba(31,38,135,0.10);
    border: 1px solid #e0e7ff;
    padding: 2.5rem 2rem 2rem 2rem;
    margin-top: -60px;
    margin-bottom: 0;
    position: relative;
    z-index: 2;
    max-width: 1100px;
}
.project-overview {
    font-size: 1.1rem;
    color: #333;
}
.features-section {
    background: linear-gradient(90deg, #f8f9fa 60%, #e0e7ff 100%);
    padding: 60px 0 40px 0;
    border-top: 6px solid #e0e7ff;
    border-bottom: 6px solid #e0e7ff;
}
.features-section h2 {
    font-weight: 700;
    margin-bottom: 2.5rem;
}
.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 2rem;
}
.feature-card {
    background: #fff;
    border-radius: 1.25rem;
    box-shadow: 0 2px 16px 0 rgba(79,140,255,0.07);
    padding: 2rem 1.5rem 1.5rem 1.5rem;
    text-align: center;
    border: 1px solid #e3eaf3;
    transition: box-shadow 0.18s, border-color 0.18s, transform 0.18s;
}
.feature-card:hover {
    transform: translateY(-6px) scale(1.03);
    box-shadow: 0 8px 32px 0 rgba(79,140,255,0.13);
    border-color: #b3d1ff;
}
.feature-icon {
    font-size: 2.7rem;
    color: #4f8cff;
    margin-bottom: 1rem;
    transition: color 0.2s, transform 0.2s;
}
.feature-card:hover .feature-icon {
    color: #a084ee;
    transform: scale(1.15) rotateZ(6deg);
}
.testimonials-section {
    background: #fff;
    padding: 48px 0 32px 0;
    border-bottom: 6px solid #e0e7ff;
}
.carousel-indicators [data-bs-target] {
    background-color: #4f8cff;
}
.testimonial-card {
    background: #f8f9fa;
    border-radius: 1.25rem;
    box-shadow: 0 2px 16px 0 rgba(79,140,255,0.07);
    padding: 2rem 1.5rem 1.5rem 1.5rem;
    border: 1px solid #e3eaf3;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
}
.testimonial-avatar {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
    border: 2px solid #4f8cff;
}
.cta-section {
    background: linear-gradient(120deg, #a084ee 0%, #6dd5ed 60%, #4f8cff 100%);
    color: #fff;
    padding: 60px 0 50px 0;
    text-align: center;
    border-top: 6px solid #e0e7ff;
}
.cta-section::before {
    content: '';
    position: absolute;
    top: -80px; left: -80px; right: -80px; bottom: -80px;
    background: radial-gradient(circle at 30% 60%, rgba(255,255,255,0.10) 0, transparent 80%),
                radial-gradient(circle at 70% 40%, rgba(255,255,255,0.13) 0, transparent 80%);
    z-index: 0;
    pointer-events: none;
}
.cta-section .container {
    position: relative;
    z-index: 1;
}
.cta-section .btn-lg {
    font-size: 1.2rem;
    padding: 0.75rem 2.5rem;
}
  (max-width: 991px) {
    .hero-section .row {
        flex-direction: column-reverse;
        text-align: center;
    }
    .hero-section .hero-img-static, .hero-section .hero-illustration {
        margin-bottom: 2rem;
        max-width: 90vw;
    }
    .hero-content {
        text-align: center;
    }
}
  (max-width: 767px) {
    .glass-card {
        padding: 1.2rem 0.7rem 1.2rem 0.7rem;
    }
    .features-section {
        padding: 40px 0 20px 0;
    }
}
</style>

