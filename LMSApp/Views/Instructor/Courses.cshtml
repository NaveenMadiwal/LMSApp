@{
    ViewData["Title"] = "My Courses";
    Layout = "../Shared/_InstructorLayout.cshtml";
    var instructorId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
}

<div class="container py-4">
    @Html.AntiForgeryToken()
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold mb-0"><i class="fas fa-book-open me-2"></i>My Courses</h2>
        <button class="btn btn-primary mb-3"><i class="fas fa-plus me-1"></i> Add Course</button>
    </div>
    <input type="hidden" id="currentInstructorId" value="@instructorId" />
    <div id="coursesList"></div>
</div>

@section Scripts {
    <script src="~/js/course-instructor.js"></script>
}

<style>
    #coursesList .card {
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }
    #coursesList .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 35px rgba(0,0,0,0.15);
    }
    .modal-content {
        border-radius: 15px;
    }
</style> 