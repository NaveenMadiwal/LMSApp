@model LMSApp.Models.ViewModels.InstructorDashboardViewModel
@{
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-6 mb-3">
        <div class="card shadow border-0 gradient-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-book fa-2x text-primary mb-2"></i>
                <h4 class="fw-bold">@Model.CourseCount</h4>
                <div class="text-muted">My Courses</div>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card shadow border-0 gradient-card h-100">
            <div class="card-body text-center">
                <i class="fas fa-users fa-2x text-success mb-2"></i>
                <h4 class="fw-bold">@Model.EnrolledStudentCount</h4>
                <div class="text-muted">Enrolled Students</div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-bottom-0">
                <h5 class="mb-0"><i class="fas fa-book-open me-2 text-primary"></i>Recent Courses</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentCourses.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var course in Model.RecentCourses)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-bold">@course.Title</span>
                                    <div class="small text-muted">@course.CreatedAt.ToString("MMM dd, yyyy")</div>
                                </div>
                                <span class="badge bg-primary">@course.CategoryName</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted text-center">No recent courses</div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-6 mb-3">
        <div class="card shadow-sm border-0 h-100">
            <div class="card-header bg-white border-bottom-0">
                <h5 class="mb-0"><i class="fas fa-user-graduate me-2 text-success"></i>Recent Enrollments</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentEnrollments.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var enroll in Model.RecentEnrollments)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <span class="fw-bold">@enroll.StudentName</span>
                                    <div class="small text-muted">@enroll.EnrolledOn.ToString("MMM dd, yyyy")</div>
                                </div>
                                <span class="badge bg-secondary">@enroll.CourseTitle</span>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <div class="text-muted text-center">No recent enrollments</div>
                }
            </div>
        </div>
    </div>
</div>

<div class="d-flex gap-3 mb-4">
    <a href="/Instructor/Courses" class="btn btn-primary"><i class="fas fa-book"></i> My Courses</a>
    <a href="/Instructor/Enrollments" class="btn btn-success"><i class="fas fa-users"></i> Enrollments</a>
</div>

<style>
.gradient-card {
    background: linear-gradient(135deg, #e0e7ff 0%, #f0fdfa 100%);
}
</style>
